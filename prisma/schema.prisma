generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
 id String @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  role     Role     @default(USER)  // <–– enum type
  createdAt DateTime @default(now())
}
enum Role {
  USER
  ADMIN
}